<div class="row">
  <div class="col">
    <h2>Entrar</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label 'Email:' %>
        <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email", placeholder: 'user@example.com' %>
      </div>

      <div class="form-group">
        <%= f.label 'Senha:' %>
        <%= f.password_field :password, class: 'form-control', autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <div class="form-check">
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <%= f.label :lembrar, class: 'form-check-label' %>
          </div>
        </div>
      <% end %>

      <p><%= f.submit 'Entrar', class: 'btn btn-primary' %></p>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
